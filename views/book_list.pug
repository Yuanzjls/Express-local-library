extends layout

block content
  h1= title

  ul
    - book_list.sort(function(a, b){let texta = a.title.toUpperCase(); let textb = b.title.toUpperCase(); if (texta==textb)return 0; else if (texta>textb) return 1; else return -1;});
    //- - book_list = {};
    each book in book_list
      li
        a(href=book.url) #{book.title}
        |  (#{book.author.name})

    else
      li There are no books.