extends layout 

block content

    h1 #{title}

    form(action="", method="post") 
        div.form-group
            label(for='first_name') #[strong First Name:] 
            input#first_name.form-control(type='text', placeholder='First name (Christian) last' name='first_name' value=(author===undefined?'':author.first_name), required=true)

            label(for='family_name') #[strong Family Name:]
            input#family_name.form-control(type="text", placeholder='Family name (surname)' name='family_name' value=(author===undefined?'':author.family_name), required=true)

        div.form-group 
            label(for='date_of_birth') Date of birth:
            input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author? '' : (author.date_of_birth==null?'':author.date_of_birth.toISOString().split('T')[0])))

        div.form-group
            lable(for='date_of_death') #[strong Date of death:]
            input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author? '' : (author.date_of_death==null?'':author.date_of_death.toISOString().split('T')[0])))


        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!=error.msg